# Environment Variables Template for Production
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="BPS Bungo Dashboard"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Database Configuration
DATABASE_URL=mysql://username:password@hostname:3306/database_name
DATABASE_HOST=your_database_host
DATABASE_PORT=3306
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_strong_database_password
DATABASE_NAME=bps_bungo_db

# Authentication & Security
JWT_SECRET=your_very_strong_jwt_secret_key_at_least_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_key_for_session_security
NEXTAUTH_URL=https://yourdomain.com

# Session Configuration
SESSION_SECRET=your_session_secret_key_for_cookie_encryption
SESSION_MAX_AGE=86400

# CORS & Security
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting (requests per minute)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# File Upload (if needed)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/uploads

# Email Configuration (if needed for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Monitoring & Logging
LOG_LEVEL=error
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@bps.go.id
DEFAULT_ADMIN_PASSWORD=ChangeMeInProduction123!

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance
DATABASE_CONNECTION_LIMIT=20
REQUEST_TIMEOUT=30000

# Features Flags
ENABLE_USER_REGISTRATION=false
ENABLE_PUBLIC_API=false
ENABLE_ANALYTICS=true